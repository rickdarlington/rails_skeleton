<div class="container center-block">
<%= devise_error_messages! %>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Change your Password
                    </h3>
                </div>
                <div class="panel-body">
                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                  <%= f.hidden_field :reset_password_token %>
                <div class="field">
                  <%= f.label :password, "New password" %><br />
                  <%= f.password_field :password, autofocus: "true", autocomplete: "off", autocorrect: "off", autocapitalize: "off", class: "form-control", tabindex: "1" %>
                </div>

                <div class="field">
                  <%= f.label :password_confirmation, "Confirm new password" %><br />
                  <%= f.password_field :password_confirmation, autofocus: "false", autocomplete: "off", autocorrect: "off", autocapitalize: "off", class: "form-control", tabindex: "2" %>
                </div>

                    <div class="actions">
                      <%= f.submit "Update", class: "btn btn-success" %>
                    </div>
                  <% end %>
                </div>
              </div>
        </div>
    </div>
</div>