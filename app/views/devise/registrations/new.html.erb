<div class="container center-block">
<%= devise_error_messages! %>
</div>

<div class="container center-block">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Sign Up
                    </h3>
                </div>
                <div class="panel-body">
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name, html: {role: "form", method: :post})) do |f| %>
                    <div class="field">
                      <%= f.label :email %><br />
                      <%= f.email_field :email, autofocus: "true", autocomplete: "on", autocorrect: "off", autocapitalize: "off", class: "form-control", tabindex: "1" %>
                    </div>

                    <div class="field">
                      <%= f.label :password %>
                      <% if @validatable %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, autofocus: "true", autocomplete: "off", autocorrect: "off", autocapitalize: "off", class: "form-control", tabindex: "2" %>
                    </div>

                    <div class="field">
                      <%= f.label :password_confirmation %><br />
                      <%= f.password_field :password_confirmation, autofocus: "true", autocomplete: "on", autocorrect: "off", autocapitalize: "off", class: "form-control", tabindex: "3" %>
                    </div>

                    <div class="actions">
                      <%= f.submit "Sign up", class: "btn btn-success" %>
                    </div>
                  <% end %>
                </div>
              </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>