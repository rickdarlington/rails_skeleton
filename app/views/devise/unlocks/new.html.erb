<div class="container center-block">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Account unlock
                    </h3>
                </div>
                <div class="panel-body">
                  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name, html: {role: "form", method: :post})) do |f| %>
                    <%= devise_error_messages! %>
                    <div class="field">
                      <%= f.label :email %><br />
                      <%= f.email_field :email, autofocus: "true", autocomplete: "off", autocorrect: "off", autocapitalize: "off", class: "form-control", tabindex: "1" %>
                    </div>

                    <div class="actions">
					  <%= f.submit "Resend unlock instructions", class: "btn btn-success" %>
					</div>
                  <% end %>
                </div>
              </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>